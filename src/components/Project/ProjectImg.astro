---
import type { ImageMetadata } from '@type/projects';
import { projectImgStyle } from './Projects.styles';

interface Props {
  imgs: {
    large: ImageMetadata;
    small: ImageMetadata;
  };
  alt: string;
}

const { imgs, alt } = Astro.props;
---

<picture class={projectImgStyle}>
  <source srcset={imgs.large.src} media="(min-width: 1140px)" />
  <img src={imgs.small.src} alt={alt} />
</picture>
