---
// @ts-ignore
import { css } from '/styled-system/css';
import { Image } from 'astro:assets';
import type { ImageMetadata } from '@type/projects';

interface Props {
  imgs: {
    large: ImageMetadata;
    small: ImageMetadata;
  };
  alt: string;
}

const projectImgStyle = css({
  display: 'block',
  maxWidth: '100%',
  gridArea: {
    lg: 'img',
  },
});

const { imgs, alt } = Astro.props;
---

<picture class={projectImgStyle}>
  <source srcset={imgs.large.src} media="(min-width: 1140px)" />
  <img src={imgs.small.src} alt={alt} />
</picture>
