---
// @ts-ignore
import { css } from '/styled-system/css';

interface Props {
	imgs: {
		large: string;
		small: string;
	}
	alt: string;
}

const projectImgStyle = css({ 
	display: 'block', 	
	maxWidth: '100%', 
	gridArea: { 
		lg: 'img' 
	} 
})

const { imgs, alt } = Astro.props;
---

<picture class={projectImgStyle}>
	<source srcset={`/assets/${imgs.large}`} media="(min-width: 1140px)" />
	<img  src={`/assets/${imgs.small}`} alt={alt} loading="lazy" />
</picture>